<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundojogo"
    android:padding="15dp" >

    <TextView
        android:id="@+id/tvJogadorDaVez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jogador da vez:"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/ivJogadorDaVez"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvJogadorDaVez"
        android:layout_marginRight="16dp"
        android:background="@drawable/arma1mini" />

    <GridLayout
        android:id="@+id/glJogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivJogadorDaVez"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:background="#000"
        android:padding="1dp" >

        <ImageView
            android:id="@+id/img00"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/quadrado1"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@drawable/quadrado2"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:background="@drawable/quadrado1"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/quadrado2"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/quadrado1"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="1"
            android:background="@drawable/quadrado2"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/quadrado1"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/quadrado2"
            android:onClick="verificaquadrado"
            android:padding="1dp" />

        <ImageView
            android:id="@+id/img22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="2"
            android:background="@drawable/quadrado1"
            android:onClick="verificaquadrado"
            android:padding="1dp" />
    </GridLayout>

    <TextView
        android:id="@+id/tvGanhador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivJogadorDaVez"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Player 1 Venceu !!"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvVitoriasP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/glJogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Vitórias Player 1: 0"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvVitoriasP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvVitoriasP1"
        android:layout_below="@+id/tvVitoriasP1"
        android:layout_marginTop="26dp"
        android:text="Vitórias Player 2: 0"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tvEmpates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvVitoriasP2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="Empates: 0"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnJogarNovamente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/shape"
        android:text="Jogar Novamente"
        android:textColor="#FFF"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape"
        android:text="Reiniciar"
        android:textColor="#FFF"
        android:textSize="20dp" 
        android:paddingRight="35dp"
        android:paddingLeft="35dp"/>

</RelativeLayout>